import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.net.HttpURLConnection;
import java.net.URL;
import org.json.JSONArray;
import org.json.JSONObject;

public class addressMaker {

    public static String getAddress(double latitude, double longitude) throws IOException {
        String apiKey = "AIzaSyBOpkaRmOY382_oPW5cJlcFHc8d7pLdHfg";  // Replace with your Google Maps API key
        String requestUrl = "https://maps.googleapis.com/maps/api/geocode/json?latlng=" + latitude + "," + longitude + "&key=" + apiKey;

        URL url = new URL(requestUrl);
        HttpURLConnection connection = (HttpURLConnection) url.openConnection();
        connection.setRequestMethod("GET");

        BufferedReader reader = new BufferedReader(new InputStreamReader(connection.getInputStream()));
        StringBuilder response = new StringBuilder();
        String line;
        while ((line = reader.readLine()) != null) {
            response.append(line);
        }
        reader.close();

        // Parse the JSON response to extract the formatted address
        JSONObject jsonObject = new JSONObject(response.toString());
        JSONArray results = jsonObject.getJSONArray("results");
        JSONObject firstResult = results.getJSONObject(0);
        String address = firstResult.getString("formatted_address");

        return address;
    }

    public static void main(String[] args) {
        try {
            double latitude = 33.952602;  // Example latitude
            double longitude = -84.549934;  // Example longitude
            String address = getAddress(latitude, longitude);
            System.out.println("Address: " + address);
        } catch (IOException e) {
            e.printStackTrace();
        }
    }
}
